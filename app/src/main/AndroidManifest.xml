<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kgifaldi.taskstar">

    <application
        tools:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- following are the layouts that we created for this application -->
        <activity android:name=".ParentLogin"></activity>
        <activity android:name=".ChildLogin"></activity>
        <activity android:name=".ChildMain"></activity>
        <activity android:name=".TodaysTasks"></activity>
        <activity android:name=".RewardsStore"></activity>
        <activity android:name=".Reward"></activity>
        <activity android:name=".ParentMain"></activity>
        <activity android:name=".ParentChildView"></activity>
        <activity android:name=".AddTask"></activity>
        <activity android:name=".AddReward"></activity>
        <activity android:name=".AddChild"></activity>
        <activity android:name=".ParentViewRewards"></activity>
        <activity android:name=".ParentViewTasks"></activity>
        <activity android:name=".RedeemReward"></activity>

    </application>

</manifest>