<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:text="PURCHASED REWARDS"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="100 Coins - Reward A"
        android:id="@+id/checkBox_r"
        android:layout_below="@+id/textView_r"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="200 Coins - Reward B"
        android:id="@+id/checkBox5_r"
        android:layout_below="@+id/checkBox_r"
        android:layout_alignEnd="@+id/checkBox_r" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="300 Coins - Reward C"
        android:id="@+id/checkBox4_r"
        android:layout_below="@+id/checkBox5_r"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/purchase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBox4_r"
        android:layout_below="@+id/checkBox4_r"
        android:text="REDEEM!" />

</RelativeLayout>